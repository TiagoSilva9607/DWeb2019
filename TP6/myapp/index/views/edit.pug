extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Alterar Elemento
            .w3-container
                input.w3-input.w3-border.w3-section.w3-light-grey(id="prov" type="text" name="prov" value=a.prov)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="local" type="text" name="local" value=a.local)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="tit" type="text" name="tit" value=a.tit)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="musico" type="text" name="musico" value=a.musico)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="duracao" type="time" name="duracao" value=a.duracao)
                button.w3-btn.w3-circle.w3-border.w3-margin-bottom.w3-right.w3-blue-grey(onclick="atualizar('" + a.key + "')") Atualizar

        .w3-container.w3-light-blue
            footer.w3-container
                p
                    a(href="/") Voltar à página principal